# Set personal aliases, overriding those provided by Oh My Zsh libs,
# plugins, and themes. Aliases can be placed here, though Oh My Zsh
# users are encouraged to define aliases within a top-level file in
# the $ZSH_CUSTOM folder, with .zsh extension. Examples:
# - $ZSH_CUSTOM/aliases.zsh
# - $ZSH_CUSTOM/macos.zsh
# For a full list of active aliases, run `alias`.
#
# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"
alias dt="cd ~/Desktop"
alias dl="cd ~/Downloads"
alias dc="cd ~/Documents"
alias nv="nvim "
alias mamp="/Applications/MAMP/Library/bin/mysql80/bin/mysql --host=localhost --port=8889 -u root -proot"
alias tn="tmux new"

# eza (Modern ls replacement)
alias ls='eza'
alias ll='eza -l --icons'          # Long format with icons
alias la='eza -la --icons'         # Long format, hidden files
alias lt='eza --tree --level=2'    # Directory tree
alias lzg='lazygit'
alias lzs='lazysql'
alias md='ekphos'

# fd (Modern find)
alias find='fd'
alias f='fd'   # shorthand

# fzf
if [[ -f ~/.fzf.zsh ]]; then
  source ~/.fzf.zsh
fi

ff() {
    local file
    file=$(fd --type f --hidden --follow --exclude .git | fzf) && echo "Selected: $file" && ${EDITOR:-nvim} "$file"
}

# Optional: fzf keybindings and completions
# [ -f /usr/share/fzf/key-bindings.zsh ] && source /usr/share/fzf/key-bindings.zsh
# [ -f /usr/share/fzf/completion.zsh ] && source /usr/share/fzf/completion.zsh

# Use fd as fzf's backend (much faster)
export FZF_DEFAULT_COMMAND='fd --type f --hidden --follow --exclude .git'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
export FZF_ALT_C_COMMAND='fd --type d --hidden --follow --exclude .git'
export FZF_DEFAULT_OPTS='--height 40% --layout=reverse --border'

# ripgrep (rg as default grep)
alias grep='rg --smart-case --hidden --glob "!.git/*"'

#  Custom
function mkd() {
    mkdir -p "$@" && cd "$_";
}

function touchp() {
    mkdir -p "$(dirname "$1")" && touch "$1";
}

function y() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
	command yazi "$@" --cwd-file="$tmp"
	IFS= read -r -d '' cwd < "$tmp"
	[ "$cwd" != "$PWD" ] && [ -d "$cwd" ] && builtin cd -- "$cwd"
	rm -f -- "$tmp"
}

function tmux-3up-1down() {
  tmux new-window \; \
    split-window -v -p 20 \; \
    select-pane -t 0 \; \
    split-window -h \; \
    split-window -h \; \
    select-pane -t 0 \; \
    resize-pane -x "25%" \; \
    select-pane -t 2 \; \
    resize-pane -x "25%"
}

alias t3='tmux-3up-1down'

