### ripgrep (rg as default grep)
alias grep='rg --smart-case --hidden --glob "!.git/*"'

# Custom
function mkd() {
  mkdir -p "$@" && cd "$_";
}

function touchp() {
  mkdir -p "$(dirname "$1")" && touch "$1";
}

function removespaces() {
    for file in *; do
        if [[ "$file" == *" "* ]]; then
            fn="${file// /-}"
            echo "Renaming '$file to '$fn'"
            mv "$file" "$fn"
        fi
    done
}

function y() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
	command yazi "$@" --cwd-file="$tmp"
	IFS= read -r -d '' cwd < "$tmp"
	[ "$cwd" != "$PWD" ] && [ -d "$cwd" ] && builtin cd -- "$cwd"
	rm -f -- "$tmp"
}

function tmux-3up-1down() {
  tmux new-window \; \
    split-window -v -p 20 \; \
    select-pane -t 0 \; \
    split-window -h \; \
    split-window -h \; \
    select-pane -t 0 \; \
    resize-pane -x "25%" \; \
    select-pane -t 2 \; \
    resize-pane -x "25%"
}

alias t3='tmux-3up-1down'

